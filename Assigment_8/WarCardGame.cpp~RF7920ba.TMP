void WarCardGame::setCards(deque<int>& cards)
{
	for (int i = 0; i < 4; i++)
	{
		for (int j = 1; j < 14; j++)
		{
			cards.push_back(j);
		}
	}
}

void WarCardGame::shuffleCards(deque<int>& cards)
{
	random_shuffle(cards.begin(), cards.end());

}

void WarCardGame::printCards(const deque<int>& cards)
{
	for (int i = 0; i < cards.size(); i++)
	{
		cout << cards[i] << " ";
	}
}





